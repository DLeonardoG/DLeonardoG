---
import Layout from '../layouts/Layout.astro';
import Header from "../components/header.astro";
import { ui } from '../i18n/ui';
import Separator from "../components/separator.astro";
import Portfolio from '../components/Portfolio.astro';
import Stack from '../components/Stack.astro';
const lang = 'en';  
const menus = ui[lang].menu;
import SocialIcons from '../components/SocialIcons.astro';

---

<Layout title="david-dev">
  <main>
    <Header menus={menus} />
    <div
    class="relative z-20 max-w-5xl mx-auto mt-16 px-10 py-10 md:mt-20 lg:mt-8 xl:px-8"

  >
    <div class=" flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <header
        class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24"
      >
        <div
          class="flex lg:items-start gap-4 flex-col lg:flex-row items-center text-center lg:text-left"
        >
          <div>
            <div
              class="text-4xl lg:text-7xl block font-bold tracking-tight bg-clip-text text-transparent dark:bg-gradient-to-b dark:from-neutral-50 dark:to-neutral-400 bg-gradient-to-b from-neutral-800 to-neutral-900 bg-opacity-50">
              <h1>David Gonzalez</h1>
          </div>
            <h2 class="mt-2 text-sm lg:text-2xl font-medium text-black dark:text-neutral-400">
              {ui[lang]['pages.home.profession']}
            </h2>

            <a
              href="./contact"
              class="inline-flex transition-all border-neutral-700 hover:border-opacity-0 border-opacity-50 shadow rounded-md border backdrop-blur-xl bg-gray-100  dark:bg-neutral-400/10 px-3 py-2.5 items-center dark:text-white text-black font-semibold group p-2 text-sm gap-x-2 mt-4"
            >
              <span>{ui[lang]['pages.home.contactButton']}</span>
              <sapn
                class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse"
              >
              </sapn>
            </a>           
              <SocialIcons width="30" height="30" />
          </div>
        </div>
      </div>
      <div
        class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      >
        <div class="relative z-50 w-full">
          <div
            class="absolute bottom-0 z-40 w-16 h-16 -translate-x-6 -translate-y-1/2 lg:top-auto top-0 lg:-translate-y-[330px] rounded-full"
          >
          </div>
          <div class="relative z-30 px-10">
            <img
              src="/fullBody.png"
              loading="eager"
              decoding="auto"
              class="relative z-30 w-full aspect-[790/1189] md:max-w-md mx-auto dark:-translate-y-0.5"
            />
          </div>
          <div
            class="absolute bottom-0 right-0 z-20 w-full h-full lg:h-[420px] translate-x-0 -translate-y-px border border-dashed rounded-2xl backdrop-blur-3xl border-neutral-300 dark:border-neutral-700"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
  <Separator text={ui[lang]['pages.home.separatorProjects']}/>
  <Portfolio lang ={lang}/>
  <Separator text={ui[lang]['pages.home.separatorSkills']}/>
  <Stack />
</Layout>